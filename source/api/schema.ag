# =============================================================================

guard ResetStateCommand: {
	type: "RESET_STATE"
};

guard Command:
	ResetStateCommand |
	RegisterCommands |
	AuthenticateCommands |
	RecoverCommands;

guard WaitingForCommandState: {
	type: "WAITING_FOR_COMMAND",
	reason: "COMMAND_REQUIRED" | "SESSION_EXPIRED" | "INVALID_COMMAND"
};

guard State:
	WaitingForCommandState |
	RegisterStates |
	AuthenticateStates |
	RecoverStates;

# =============================================================================

guard User: {
	id: string,
	email: string,
	username?: string
};

route readState(): GET:/ => [
	"x-wait-ms": integer(0,*)
] {
	state: State,
	user?: User
};

route sendCommand(): POST:/ <= {
	command: Command
} => [
	"x-wait-ms": integer(0,*)
] {
	state: State,
	user?: User
};
